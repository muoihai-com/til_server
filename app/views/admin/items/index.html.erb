<div class="scaffold">
  <p id="notice"><%= notice %></p>

  <h1>Items</h1>
  
  <p><a href="<%= builder_index_admin_items_path %>">Builder</a></p>

  <p><a href="<%= admin_tags_path %>">Tags</a></p>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.title %></td>
          <td><%= link_to 'Show', admin_item_path(item) %></td>
          <td><%= link_to 'Edit', edit_admin_item_path(item) %></td>
          <td><%#= link_to 'Destroy', [:admin, item], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Item', new_admin_item_path %>
</div>
